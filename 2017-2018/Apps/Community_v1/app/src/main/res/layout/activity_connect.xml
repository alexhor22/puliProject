<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caceres95.bluerx.connect"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/alarmStatus "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="92dp"
        android:text="No Alarm"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/alarmLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDis"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="84dp"
        android:text="Disconnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmLabel" />

    <TextView
        android:id="@+id/alarmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Alarm Status:"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/alarmStatus "
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
